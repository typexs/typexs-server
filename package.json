{
  "name": "@typexs/server",
  "version": "1.0.13",
  "description": "Servers for typexs",
  "main": "index.js",
  "browser": "browser.js",
  "directories": {
    "doc": "docs/de"
  },
  "scripts": {
    "test": "npx nyc mocha test/{**,**/**}/*.spec.ts",
    "posttest": "npx nyc report --reporter=json && npx codecov -f coverage/*.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typexs/typexs-server.git"
  },
  "author": "Robert Kania",
  "license": "MIT",
  "keywords": [
    "commons",
    "typescript",
    "typexs",
    "server",
    "controllers"
  ],
  "bugs": {
    "url": "https://github.com/typexs/typexs-server/issues"
  },
  "homepage": "https://github.com/typexs/typexs-server#readme",
  "devDependencies": {
    "@allgemein/packaging": "^1.1.0",
    "@testdeck/mocha": "^0.1.2",
    "@types/chai": "^4.2.13",
    "@types/chai-as-promised": "^7.1.3",
    "@types/express": "^4.17.8",
    "@types/got": "^9.6.11",
    "@types/gulp": "^4.0.7",
    "@types/gulp-watch": "^4.1.34",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.8",
    "@types/supertest": "^2.0.10",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.0",
    "codelyzer": "^6.0.1",
    "commons-base": "^1.2.2",
    "commons-http": "^1.0.7",
    "commons-schema-api": "^1.1.15",
    "del": "^6.0.0",
    "express": "^4.17.1",
    "got": "^9.6.0",
    "gulp": "^4.0.2",
    "gulp-bump": "^3.2.0",
    "gulp-clean": "^0.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-shell": "^0.8.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "merge-stream": "^2.0.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "redis": "^3.0.2",
    "sqlite3": "^5.0.0",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "@typexs/base": "^1.2.32",
    "@typexs/roles-api": "^1.0.14",
    "class-transformer": "^0.3.1",
    "routing-controllers": "^0.8.1"
  },
  "private": true,
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "tmp/",
      "build/"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true,
    "cache": false
  },
  "typexs": {
    "name": "server",
    "declareLibs": [
      {
        "topic": "server.controllers",
        "refs": [
          "controllers",
          "src/controllers",
          "src/modules/*/controllers"
        ]
      },
      {
        "topic": "server.middleware",
        "refs": [
          "middleware",
          "src/middleware"
        ]
      }
    ]
  }
}
