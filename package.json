{
  "name": "@typexs/server",
  "version": "0.4.23",
  "description": "Servers for typexs",
  "main": "index.js",
  "directories": {
    "doc": "docs/de"
  },
  "scripts": {
    "test": "nyc mocha --opts test/mocha.all.opts",
    "posttest": "nyc report --reporter=json && codecov -f coverage/*.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typexs/typexs-server.git"
  },
  "author": "Robert Kania",
  "license": "MIT",
  "keywords": [
    "commons",
    "typescript",
    "typexs",
    "server",
    "controllers"
  ],
  "bugs": {
    "url": "https://github.com/typexs/typexs-server/issues"
  },
  "homepage": "https://github.com/typexs/typexs-server#readme",
  "devDependencies": {
    "@allgemein/packaging": "^1.1.0",
    "@types/chai": "^4.2.10",
    "@types/express": "^4.17.3",
    "@types/got": "^9.6.9",
    "@types/gulp": "^4.0.6",
    "@types/gulp-watch": "^4.1.34",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.1",
    "@types/request-promise": "^4.1.45",
    "@types/superagent": "^4.1.6",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "codelyzer": "^5.2.1",
    "commons-http": "^1.0.7",
    "del": "^5.1.0",
    "express": "^4.17.1",
    "got": "^9.6.0",
    "gulp": "^4.0.2",
    "gulp-bump": "^3.1.3",
    "gulp-clean": "^0.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-shell": "^0.8.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "merge-stream": "^2.0.0",
    "mocha": "^7.1.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^15.0.0",
    "redis": "^3.0.2",
    "sqlite3": "^4.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^6.2.0",
    "tslint": "^6.1.0",
    "typescript": "3.5.3",
    "typescript-require": "^0.2.10"
  },
  "dependencies": {
    "@typexs/base": "0.x",
    "@typexs/roles-api": "^1.0.10",
    "class-transformer": "^0.2.3",
    "commons-base": "^1.2.2",
    "commons-schema-api": "^1.1.8",
    "routing-controllers": "^0.8.0"
  },
  "private": true,
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "tmp/",
      "build/"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true,
    "cache": false
  },
  "typexs": {
    "name": "server",
    "declareLibs": [
      {
        "topic": "server.controllers",
        "refs": [
          "controllers",
          "src/controllers",
          "src/modules/*/controllers"
        ]
      },
      {
        "topic": "server.middleware",
        "refs": [
          "middleware",
          "src/middleware"
        ]
      }
    ]
  }
}
